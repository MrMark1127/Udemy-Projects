<%- include('partials/header') -%>

<h1>Compose</h1>

<p>
    <form action="/compose" method="post">
        <div class="form-group">
            <div class="mb-3">
                <label for="blogPostTitle" class="form-label">Title</label>
                <input type="text" class="form-control" name="postTitle" autocomplete="off">
            </div>
            <div class="mb-3">
                <label for="blogPostBody" class="form-label">Body</label>
                <textarea class="form-control" name="postBody" rows="3"></textarea>
            </div>
        </div>
        <button type="submit" class="btn btn-primary mb-3">Publish</button>
    </form>
</p>

<%- include('partials/footer') -%>